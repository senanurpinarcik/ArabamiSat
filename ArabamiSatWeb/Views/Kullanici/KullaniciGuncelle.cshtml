@{
    ViewData["Title"] = "Kullanıcı Güncelleme";
}
@model ArabamiSatWeb.Models.Kullanici.Kullanici

@Html.Partial("Partials/_MessagePartial")
<div class="row">
    <div class="col-md-12">
        <form asp-action="KullaniciGuncelle" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" type="text" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soyad" class="control-label"></label>
                <input asp-for="Soyad" type="text" class="form-control" />
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="IkiFaktorluDogrulama" type="checkbox" class="form-check-input" />
                <label asp-for="IkiFaktorluDogrulama" class="form-check-label"></label>
                <span asp-validation-for="IkiFaktorluDogrulama" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-sm btn-primary" /> 
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">

    </script>
}