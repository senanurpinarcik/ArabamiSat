@using ArabamiSatWeb.Models.Parametre
@model List<Marka>
@{
    ViewData["Title"] = "Marka Liste";
} 

<div style="margin-bottom: 10px; text-align: right">
    <a class="btn btn-sm btn-success" asp-area="" asp-controller="Parametre" asp-action="MarkaEkle" role="button">Yeni Ekle</a>
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Ad</th> 
        <th scope="col" style="width: 150px">İşlemler</th> 
    </tr>
    </thead>
    <tbody>
    @foreach (Marka marka in Model)
    {
        <tr>
            <th scope="row">@marka.Id</th>
            <td>@marka.Ad</td>
            <td>
                <a class="btn btn-sm btn-primary" href="/Parametre/MarkaGuncelle?id=@marka.Id" role="button">Güncelle</a>
                <a class="btn btn-sm btn-danger" href="/Parametre/MarkaSil?id=@marka.Id" role="button">Sil</a>
            </td>
        </tr>
    } 
    </tbody>
</table>

