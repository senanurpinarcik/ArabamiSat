@{
    ViewData["Title"] = "Marka Model Güncelle";
    List<Marka> markaList = ViewBag.MarkaList;
}
@using ArabamiSatWeb.Models.Parametre
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ArabamiSatWeb.Models.Parametre.MarkaModel

<div class="row">
    <div class="col-md-12">
        @if (ViewData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewData["SuccessMessage"]
            </div>
        }
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["ErrorMessage"]
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form asp-action="MarkaModelGuncelle" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="MarkaId" class="control-label"></label>
                <select asp-for="MarkaId" class="form-control" onchange="GetMarkaModel(this.value);">
                    <option value="0">-Seçiniz-</option>


                    @foreach (Marka marka in markaList)
                    {
                        if (marka.Id == Model.MarkaId)
                        {
                            <option selected value="@marka.Id">@marka.Ad</option>
                        }
                        else
                        {
                            <option value="@marka.Id">@marka.Ad</option>
                        }
                    }

                </select>
            </div>

            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" type="text" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-sm btn-primary" />
                <a class="btn btn-sm btn-success" href="/Parametre/MarkaModelListe" role="button">Geri Dön</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">

    </script>
}
