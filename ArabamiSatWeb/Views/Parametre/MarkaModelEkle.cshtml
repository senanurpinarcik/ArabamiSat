
@{
    ViewData["Title"] = "Marka Model Ekle";
    List<Marka> markaList = ViewBag.MarkaList;
}

@using ArabamiSatWeb.Models.Parametre
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ArabamiSatWeb.Models.Parametre.MarkaModel


@Html.Partial("Partials/_MessagePartial")
<div class="row">
    <div class="col-md-12">
        <form asp-action="MarkaModelEkle" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
            <div class="form-group">
                <label asp-for="MarkaId" class="control-label"></label>
                <select asp-for="MarkaId" class="form-control" onchange="GetMarkaModel(this.value);">
                    <option value="0">-Seçiniz-</option>


                    @foreach (Marka marka in markaList)
                    {
                        <option value="@marka.Id">@marka.Ad</option>
                    }

                </select>
            </div>
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" type="text" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-sm btn-primary" />
                <a class="btn btn-sm btn-success" href="/Parametre/MarkaModelListe" role="button">Geri Dön</a>
            </div></form>
    </div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">

    </script>
}</div>