@{
    ViewData["Title"] = "Arabalarım";
}
@using ArabamiSatWeb.Models.Araba
@model List<ArabamiSatWeb.Models.Araba.Araba>

<div style="margin-bottom: 10px; text-align: right">
    <a class="btn btn-sm btn-success" asp-area="" asp-controller="Arabam" asp-action="Ekle" role="button">Yeni Ekle</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Fotoğraf</th>
            <th scope="col">Marka</th>
            <th scope="col">Model</th>
            <th scope="col">Yıl</th>
            <th scope="col">Fiyat</th>
            <th scope="col">Durum</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Araba araba in Model)
        {
            <tr>
                <td width="120" height="100"><img src="@(araba.Fotograf)" height="120" width="200"></td>
                <td>@araba.Marka.Ad</td>
                <td>@araba.MarkaModel.Ad</td>
                <td>@araba.Yil</td>
                <td>@araba.Fiyat</td>
                <td>@(araba.DurumId == 1 ? "Sıfır" :"İkinci El")</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/Arabam/Guncelle?id=@araba.Id" role="button">Güncelle</a>
                    <a class="btn btn-sm btn-danger" href="/Arabam/Sil?id=@araba.Id" role="button">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table> 