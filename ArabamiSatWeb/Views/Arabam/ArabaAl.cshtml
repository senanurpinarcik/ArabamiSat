@{
    ViewData["Title"] = "Araba Al";
}
@using ArabamiSatWeb.Models.Araba
@model List<ArabamiSatWeb.Models.Araba.Araba>
@{
    
    foreach (Araba araba in Model)
    {
        <table class="table">
            <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Marka</th>
                <th scope="col">Model</th>
                <th scope="col">Yıl</th>
                <th scope="col">Fiyat</th>
                <th scope="col">Durum</th>
                <th scope="col">Açıklama</th>
            </tr>
            </thead>
            <tbody>
            <tr>
            
                <td width="120" height="100"><img src="@(araba.Fotograf)" height="120" width="200"></td>
                <td>@araba.Marka.Ad</td>
                <td>@araba.MarkaModel.Ad</td>
                <td>@araba.Yil</td>
                <td>@araba.Fiyat</td>
                <td>@araba.DurumId</td>
                <td>@araba.Aciklama</td>
            </tr>
            </tbody>
        </table>

    }

}