@{
    ViewData["Title"] = "Yeni Kayit";
    List<Kullanici> kullaniciList = ViewBag.MarkaList;
}
@using ArabamiSatWeb.Models.Kullanici
@model ArabamiSatWeb.Models.Kullanici.Kullanici

<div class="row">
    <div class="col-md-12">
        <form asp-action="YeniKayit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <textarea asp-for="Ad" class="form-control" rows="1"></textarea>
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Soyad" class="control-label"></label>
                <textarea asp-for="Soyad" class="form-control" rows="1"></textarea>
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Eposta" class="control-label"></label>
                <textarea asp-for="Eposta" class="form-control" rows="1"></textarea>
                <span asp-validation-for="Eposta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sifre" class="control-label"></label>
                <input type="password" name="Sifre">
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>

        </form>
       
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}


