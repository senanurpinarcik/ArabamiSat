@{
    ViewBag.Title = "";
}

@Html.Partial("Partials/_MessagePartial")
<div class="row">
    <div class="col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4">
        <section class="page-title">
            @ViewBag.Uyari
        </section>
        <section>
            <form class="form inputs-underline" method="post" action="/Giris/SifremiUnuttum/">
