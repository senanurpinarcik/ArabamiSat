@{
    ViewBag.Title = "";
}
@model ArabamiSatWeb.Models.Kullanici.Kullanici


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="loginBody">
            <h2>
                <i class="fa-solid fa-car-tunnel"></i>
                Arabamı Sat!
            </h2>
            <h5>Şifre Sıfırlama</h5>
            @Html.Partial("Partials/_MessagePartial")
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="SifremiUnuttum">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Eposta" class="control-label"></label>
                            <input asp-for="Eposta" class="form-control"></input>
                            <span asp-validation-for="Eposta" class="text-danger"></span>
                        </div> 
                        <div class="form-group">
                            <input type="submit" value="Şifremi Sıfırla" class="btn btn-primary"/>
                        </div>
                    </form>
                </div>
            </div> 
        </div>
    </div>
    <div class="col-md-4"></div>
</div> 