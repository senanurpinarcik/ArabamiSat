@model ArabamiSatWeb.Models.Kullanici.Kullanici
@{
    ViewData["Title"] = "";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="loginBody">
            <h2>
                <i class="fa-solid fa-car-tunnel"></i>
                Arabamı Sat!
            </h2>
            @Html.Partial("Partials/_MessagePartial")
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Index">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Eposta" class="control-label"></label>
                            <input asp-for="Eposta" class="form-control"></input>
                            <span asp-validation-for="Eposta" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sifre" class="control-label"></label>
                            <input asp-for="Sifre" class="form-control"></input>
                            <span asp-validation-for="Sifre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Giriş" class="btn btn-primary"/>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12" style="padding: 0;">
                    <a class="nav-link loginAnchor" asp-area="" asp-controller="Giris" asp-action="SifremiUnuttum">
                        Şifremi Unuttum
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12" style="padding: 0;">
                    <a class="nav-link loginAnchor" asp-area="" asp-controller="Giris" asp-action="KayitOl">
                        Kayıt Ol
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>